<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        mc:Ignorable="d"
        Title="Chat Application" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key= "Background" TargetType="TextBox">

            <Setter Property="TextElement.FontStyle" Value="Italic"></Setter>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*" >

            </ColumnDefinition>
            <ColumnDefinition Width="265*">

            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Background="#FF3163BB">
            <Grid.RowDefinitions>
                <RowDefinition Height="154*">

                </RowDefinition>
                <RowDefinition Height="265*">

                </RowDefinition>

            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="1" Background="#FFE9F8FD"></ScrollViewer>

        </Grid>
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="332*">

                </RowDefinition>
                <RowDefinition Height="87*">

                </RowDefinition>

            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" Margin="0,0,0,65" Grid.RowSpan="2" Background="#FFEEF8FB">Testing
            </ScrollViewer>
            <Grid Grid.Row="1" Margin="0,10,0,0" Background="#FF438EDA">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="381*">

                    </ColumnDefinition>
                    <ColumnDefinition Width="149*">

                    </ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox  Style= "{StaticResource Background}" Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" Text="Hello Is this working" Name="Send_Textbox" Margin="10,22,111,10" Grid.ColumnSpan="2"/>
                <Button Click="GetSendTextBoxString" Grid.Column="1" Content="Send" Margin="43,22,20,10" Background="Black" Cursor="ArrowCD"/>
            </Grid>
        </Grid>


    </Grid>
</Window>
